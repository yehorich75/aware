    li.main-menu__item
      a(href="#").main-menu__link LookBook
    li.main-menu__item
      a(href="#").main-menu__link Blog

  .search
    form(action="#")
      input(type="text" placeholder="Search...").form-control.search__input
      input(type="submit" value="").search__button

  .location
    span.icon-location-pin
    a(href="#").location__link Uzbekistan / $

  ul.profile-menu
    li.profile-menu__item.dropdown.dropdown--right.dropdown--white
      a(href="#").profile-menu__link
        span.basket
          span.icon-bag
          span.badge 9
      +dropdown(["Bags", "Caps & Hats", "Gifts", "Grooming"])
        span.b-price $179
      .dropdown-content
        .cart
          ul.cart-list
            li.cart-list__item
              .cart-list__img
                a(href="#")
                  img(src="img/cart-list-img.png", alt="cart-list-img.png")
              .cart-list__info
                h6.product__title
                  a(href="#") New Balance Men's Street Backpack
                .cart-list__details
                  span.price $485  
                  span.product__details
                    span S
                    |  • 
                    span Black
                    |  • 
                    span 1 pcs
                .cart-list__delete
                  a(href="#").js-remove-cart
                    span.icon-close
                      span.path1
                      span.path2

    li.profile-menu__item.dropdown.dropdown--right.dropdown--white
      a(href="#").profile-menu__link
        span.icon-user
      .dropdown-content
        ul.user-menu
          li.user-menu__item
            a(href="#").user-menu__link 
              span.icon-user
              | Profile
          li.user-menu__item
            a(href="#").user-menu__link 
