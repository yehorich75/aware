      +dropdown(["Bags", "Caps & Hats", "Gifts", "Grooming", "Hoodies & Sweatshirts", "Jackets & Coats", "Jeans", "Jewellery"])
           
    li.main-menu__item.dropdown
      a(href="#").main-menu__link Women
        span.icon-caret
      +dropdown(["Shirts", "Caps & Hats", "Gifts", "Grooming", "Hoodies & Sweatshirts", "Jackets & Coats", "Jeans", "Jewellery", "Joggers"])

    li.main-menu__item.dropdown
      a(href="#").main-menu__link Kids
        span.icon-caret
      +dropdown(["New Arrivals", "Dresses", "Tops", "Sweaters & Knits", "Jackets & Coats", "Rompers & Jumpsuits"])

    li.main-menu__item.dropdown
